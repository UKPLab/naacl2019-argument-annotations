<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
	<name>ProductReviewMetaData</name>
	<description>Type system for Amazon product reviews</description>
	<version>0.1</version>
	<vendor>Redacted for anonymous submission</vendor>
	<types>
		<typeDescription>
			<name>de.tudarmstadt.ukp.naacl2019.argannotation.types.ProductReviewMetaData</name>
			<description>Meta data for Amazon product reviews</description>
			<supertypeName>uima.tcas.Annotation</supertypeName>
			<features>
				<featureDescription>
					<name>productName</name>
					<description>Product name</description>
					<rangeTypeName>uima.cas.String</rangeTypeName>
				</featureDescription>
				<featureDescription>
					<name>productID</name>
					<description>Product ID</description>
					<rangeTypeName>uima.cas.String</rangeTypeName>
				</featureDescription>
				<featureDescription>
					<name>reviewerID</name>
					<description>ID of the reviewer</description>
					<rangeTypeName>uima.cas.String</rangeTypeName>
				</featureDescription>
				<featureDescription>
					<name>starRating</name>
					<description>Rating (0-5) with 0.5 graduation</description>
					<rangeTypeName>uima.cas.Double</rangeTypeName>
				</featureDescription>
				<featureDescription>
					<name>helpfulness</name>
					<description>Information whether the review was helpful</description>
					<rangeTypeName>uima.cas.String</rangeTypeName>
				</featureDescription>
				<featureDescription>
					<name>timestamp</name>
					<description>Timestamp of the review</description>
					<rangeTypeName>uima.cas.String</rangeTypeName>
				</featureDescription>
			</features>
		</typeDescription>
	<typeDescription>
      <name>de.tudarmstadt.ukp.naacl2019.argannotation.types.ReviewTitle</name>
      <description/>
      <supertypeName>uima.tcas.Annotation</supertypeName>
    </typeDescription>
  <typeDescription>
      <name>de.tudarmstadt.ukp.naacl2019.argannotation.types.ReviewBody</name>
      <description/>
      <supertypeName>uima.tcas.Annotation</supertypeName>
    </typeDescription>
  </types>
</typeSystemDescription>
